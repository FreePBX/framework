Options -Indexes
# Apache 2.2
<IfModule !mod_authz_core.c>
	# Disallow all . files, such as .htaccess or .git
	<FilesMatch "\..*$">
		Deny from all
	</FilesMatch>
	# Allow only index, wcb.php and robots.txt file.
	<FilesMatch "(^$|robots\.txt|wcb\.php|index\.php$)">
		Allow from all
	</FilesMatch>
</IfModule>

# Apache 2.4
<IfModule mod_authz_core.c>
	# Disallow all . files, such as .htaccess or .git
	<FilesMatch "\..*$">
		Require all denied
	</FilesMatch>
	# Allow only index, wcb.php and robots.txt file.
	<FilesMatch "(^$|robots\.txt|wcb\.php|index\.php$)">
		Require all granted
	</FilesMatch>
</IfModule>